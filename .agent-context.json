{
  "$schema": "https://agent-context.dev/schema.json",
  "version": "1.0.0",
  "project": {
    "name": "@agent-context/cli",
    "description": "Universal AI agent context system - CLAUDE.md templates, memory, worktrees for Claude Code, Factory.AI, VSCode, OpenCode",
    "defaultBranch": "main"
  },
  "platforms": {
    "claudeCode": {
      "enabled": true
    },
    "factory": {
      "enabled": true
    },
    "vscode": {
      "enabled": true
    },
    "opencode": {
      "enabled": true
    }
  },
  "worktrees": {
    "enabled": true,
    "directory": ".worktrees",
    "branchPrefix": "feature/",
    "autoCleanup": true
  },
  "droids": [],
  "commands": [],
  "template": {
    "extends": "default",
    "sections": {
      "memorySystem": false,
      "browserUsage": true,
      "decisionLoop": true,
      "worktreeWorkflow": true,
      "troubleshooting": true,
      "augmentedCapabilities": true
    }
  }
}